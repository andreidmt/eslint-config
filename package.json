{
  "name": "tpl-node",
  "version": "0.0.1",
  "description": "",
  "type": "module",
  "main": "dist/index.js",
  "files": [
    "/dist"
  ],
  "license": "MIT",
  "homepage": "https://github.com/{}",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/{}.git"
  },
  "bugs": {
    "url": "https://github.com/{}/issues"
  },
  "author": {
    "name": "Andrei Dumitrescu",
    "url": "https://github.com/andreidmt"
  },
  "keywords": [
    "node"
  ],
  "engines": {
    "node": ">= 14"
  },
  "scripts": {
    "----UTIL": "",
    "prepare": "git config --local core.hooksPath .githook",
    "presetup": "rm -rf ./node_modules",
    "setup": "npm ci --also=dev",
    "prefresh": "rm -rf ./node_modules && rm --force package-lock.json",
    "fresh": "npm install",
    "update": "npm-check --update",
    "postupdate": "npm audit fix",
    "----BUILD": "",
    "build": "tsc",
    "----LINT": "",
    "lint.js": "eslint --quiet 'src",
    "lint.js-staged": "eslint --quiet",
    "lint.md": "markdownlint *.md",
    "lint.md-staged": "markdownlint",
    "lint": "npm run lint.js && npm run lint.md",
    "----TEST": "",
    "test": "riteway 'src/**/*.test.js' | tap-nirvana",
    "tdd": "nodemon --watch src --exec \"npm test\"",
    "coverage:ci": "nyc npm test && nyc report --reporter=text-lcov | coveralls",
    "----PUBLISH": "",
    "publish": "semantic-release"
  },
  "dependencies": {
    "@asd14/m": "^6.6.0"
  },
  "devDependencies": {
    "@asd14/eslint-config": "^5.41.0",
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@semantic-release/changelog": "^6.0.0",
    "@semantic-release/git": "^10.0.0",
    "coveralls": "^3.1.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-html": "^6.2.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-no-inferred-method-name": "^2.0.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-unicorn": "^36.0.0",
    "lint-staged": "^11.1.1",
    "markdownlint-cli": "^0.28.1",
    "nodemon": "^2.0.12",
    "npm-check": "^5.9.2",
    "nyc": "^15.1.0",
    "prettier": "^2.4.1",
    "riteway": "^6.3.1",
    "semantic-release": "^18.0.0",
    "tap-nirvana": "^1.1.0"
  }
}
