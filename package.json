{
  "name": "@asd14/eslint-config",
  "version": "6.15.0",
  "description": "JavaScript ESLint rules",
  "homepage": "https://github.com/asd-xiv/eslint-config",
  "main": "targets/node.js",
  "license": "MIT",
  "files": [
    "/targets",
    "/rules"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/asd-xiv/eslint-config.git"
  },
  "bugs": {
    "url": "https://github.com/asd-xiv/eslint-config/issues"
  },
  "author": {
    "name": "Andrei Dumitrescu",
    "url": "https://github.com/andreidmt"
  },
  "keywords": [
    "config",
    "eslint",
    "eslint-config",
    "eslint-rules",
    "javascript",
    "typescript",
    "prettier",
    "react",
    "node"
  ],
  "scripts": {
    "----UTIL": "",
    "prepare": "git config --local core.hooksPath .githook",
    "setup": "npm ci --also=dev",
    "update": "ncu --interactive --peer",
    "postupdate": "npm audit fix",
    "format": "prettier --write --prose-wrap=always . && eslint --fix .",
    "----CHECK": "",
    "lint.js": "eslint --quiet 'rules/*' 'targets/*'",
    "lint.md": "markdownlint '*.md' --ignore CHANGELOG.md",
    "lint": "npm run lint.js && npm run lint.md",
    "----PUBLISH": "",
    "publish": "semantic-release"
  },
  "lint-staged": {
    "*.{js,json}": "eslint --quiet",
    "*.md": "markdownlint --ignore CHANGELOG.md",
    ".circleci/config.yml": "circleci config validate"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "@typescript-eslint/parser": "^5.19.0",
    "eslint-plugin-html": "^6.2.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.4.0",
    "lint-staged": "^12.3.8",
    "npm-check-updates": "^12.5.9",
    "markdownlint-cli": "^0.31.1",
    "semantic-release": "^19.0.2"
  },
  "peerDependencies": {
    "eslint": "~8.13.0",
    "eslint-config-prettier": "~8.5.0",
    "eslint-plugin-import": "~2.26.0",
    "eslint-plugin-jsdoc": "~39.2.0",
    "eslint-plugin-json": "~3.1.0",
    "eslint-plugin-no-inferred-method-name": "~2.0.0",
    "eslint-plugin-prettier": "~4.0.0",
    "eslint-plugin-promise": "~6.0.0",
    "eslint-plugin-unicorn": "~42.0.0",
    "prettier": "~2.6.0"
  },
  "engines": {
    "node": "^12.20.0 || ^14.13.1 || >=16.0.0",
    "npm": ">=8"
  }
}
