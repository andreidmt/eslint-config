{
  "name": "@asd14/eslint-config",
  "version": "8.0.0",
  "description": "JavaScript ESLint rules",
  "homepage": "https://github.com/asd-xiv/eslint-config",
  "main": "targets/node.js",
  "license": "MIT",
  "files": [
    "/targets",
    "/rules"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/asd-xiv/eslint-config.git"
  },
  "bugs": {
    "url": "https://github.com/asd-xiv/eslint-config/issues"
  },
  "author": {
    "name": "Andrei Dumitrescu",
    "url": "https://github.com/andreidmt"
  },
  "keywords": [
    "config",
    "eslint",
    "eslint-config",
    "eslint-rules",
    "javascript",
    "typescript",
    "prettier",
    "react",
    "node"
  ],
  "scripts": {
    "----UTIL": "",
    "prepare": "git config --local core.hooksPath .githook",
    "setup": "npm ci --also=dev",
    "update": "ncu --interactive",
    "postupdate": "npm audit fix",
    "format": "prettier --write --prose-wrap=always . && eslint --fix .",
    "----CHECK": "",
    "lint.js": "eslint --quiet 'rules/*' 'targets/*'",
    "lint.md": "markdownlint '*.md' --ignore CHANGELOG.md",
    "lint": "npm run lint.js && npm run lint.md",
    "----PUBLISH": "",
    "release": "semantic-release"
  },
  "lint-staged": {
    "*.{js,json}": "eslint --quiet",
    "*.md": "markdownlint --ignore CHANGELOG.md",
    ".circleci/config.yml": "circleci config validate"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^5.38.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsdoc": "^39.3.6",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-no-inferred-method-name": "^2.0.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.0.1",
    "eslint-plugin-unicorn": "^43.0.2",
    "eslint-plugin-html": "^7.1.0",
    "eslint-plugin-react": "^7.31.8",
    "eslint-plugin-react-hooks": "^4.6.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "lint-staged": "^13.0.3",
    "npm-check-updates": "^16.3.4",
    "markdownlint-cli": "^0.32.2",
    "semantic-release": "^19.0.5"
  },
  "peerDependencies": {
    "eslint": "^8.24.0",
    "prettier": "^2.7.1"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
